# Copy this to .env and update values

# Server Configuration
PORT=5002
NODE_ENV=development

# Option 1: MongoDB Atlas (Recommended)
# Get this connection string from MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/micronote?retryWrites=true&w=majority

# Option 2: Local MongoDB (if you install it locally)
# MONGODB_URI=mongodb://localhost:27017/micronote

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:5173