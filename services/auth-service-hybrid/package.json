{
  "name": "micronote-auth-service-hybrid",
  "version": "1.0.0",
  "description": "Hybrid Auth Service - REST + gRPC for MicroNote",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:rest": "node rest-server.js",
    "start:grpc": "node grpc-server.js",
    "start:hybrid": "node server.js",
    "proto:generate": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./src/generated --grpc_out=grpc_js:./src/generated --plugin=protoc-gen-grpc=`which grpc_tools_node_protoc_plugin` -I ../../proto ../../proto/auth.proto"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "sequelize": "^6.35.0",
    "mysql2": "^3.7.0",
    "redis": "^4.6.10",
    "helmet": "^7.1.0",
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "grpc-tools": "^1.12.4"
  }
}